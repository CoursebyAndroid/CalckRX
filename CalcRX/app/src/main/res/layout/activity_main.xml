<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leshchenko.root.calcrx.MainActivity">
    <EditText
        android:id="@+id/id_txt_val_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="value 1" />

    <EditText
        android:id="@+id/id_txt_op"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="oper"
        android:layout_below="@id/id_txt_val_1" />

    <EditText
        android:id="@+id/id_txt_val_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="value 2"
        android:layout_below="@+id/id_txt_op"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/id_txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="result"
        android:layout_below="@id/id_txt_val_2" />

    <Button
        android:id="@+id/btn_result"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="result" />

</RelativeLayout>